<!DOCTYPE html>
<html>
  <head>
    <title>QNa</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
      <div class="text-center alert alert-success"><%= flash[:notice] %></div>
    <% end %>

    <% if flash[:danger] %>
      <div class="text-center alert alert-success"><%= flash[:danger] %></div>
    <% end %>



    <%= yield %>
  </body>
</html>
